<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="0dp"
    android:id="@+id/drawerLayout"
    tools:context=".HomeScreen.Home">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">
    <androidx.appcompat.widget.Toolbar
        android:textDirection="inherit"
        app:titleTextColor="@color/white"
        android:textAlignment="viewEnd"
        android:id="@+id/Toolbardrawer"
        android:background="@color/main_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_marginEnd="20sp"
            android:id="@+id/profilleUser"
            android:layout_gravity="end|center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/addfolder"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:visibility="gone"
                android:background="#060D3A"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_margin="10sp"
                    android:id="@+id/textView"
                    android:gravity="center|start"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome Gopal"
                    android:textSize="25sp"
                    android:textStyle="bold"/>
                <!--                <de.hdodenhof.circleimageview.CircleImageView-->
                <!--                    android:id="@+id/profilleUser"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_margin="20dp"-->
                <!--                    android:layout_width="50dp"-->
                <!--                    android:layout_height="50dp"-->
                <!--                    android:src="@drawable/addfolder"/>-->
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:showDividers="middle"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:baselineAligned="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/new_Folder"
                            android:layout_gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/addfolder2"/>
                        <TextView
                            android:autoSizePresetSizes="@arrays/autosize_text_sizes"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Create New"
                            android:gravity="center|top"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:baselineAligned="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/Document"
                            android:layout_gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/folder_2"/>
                        <TextView
                            android:autoSizePresetSizes="@arrays/autosize_text_sizes"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Documents"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:baselineAligned="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/Photos"
                            android:layout_gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/folder_2"/>
                        <TextView
                            android:autoSizePresetSizes="@arrays/autosize_text_sizes"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Photos"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:baselineAligned="true"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/Music"
                            android:layout_gravity="center"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/folder_2"/>
                        <TextView
                            android:autoSizePresetSizes="@arrays/autosize_text_sizes"
                            android:autoSizeTextType="uniform"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Music"
                            android:gravity="center"
                            android:textStyle="bold"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:itemCount="3"
                android:layout_gravity="center"
                tools:listitem="@layout/folder_line"/>



        </LinearLayout>
    </ScrollView>
</LinearLayout>

    <com.google.android.material.navigation.NavigationView
        app:itemTextColor="@color/black"
        android:layout_marginStart="10dp"
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        android:id="@+id/menudrawer"
        app:itemIconSize="20dp"
        android:layout_gravity="start"
        app:menu="@menu/drawermenu"/>
</androidx.drawerlayout.widget.DrawerLayout>